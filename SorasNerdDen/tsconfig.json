// This file is responsible for configuring TypeScript compilation (See https://github.com/Microsoft/TypeScript/wiki/tsconfig.json).
{
  // compilerOptions - TypeScript to JavaScript compilation options.
  "compilerOptions": {
    // Do not allow implicit any variables. Force them to be explicitly declared.
    "noImplicitAny": true,
    // Stop processing on error.
    "noEmitOnError": true,
    // Remove comments.
    "removeComments": true,
    // Do not create source map files (Leave this to the gulp plugin).
    "sourceMap": false,
    // Use the system modules.
    "module": "system",
    // Compile to ECMAScript 5.
    "target": "es5",
    // The libraries TypeScript should use to validate definition files
    "lib": ["dom", "es2015.iterable", "es5", "es6"]
  },
  // exclude - Exclude the node_modules and wwwroot folders from being scanned for TypeScript (.ts)
  // or TypeScript definition (.d.ts) files.
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}