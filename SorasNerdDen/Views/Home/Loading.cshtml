@inject IOptionsSnapshot<AppSettings> AppSettings
@{
    // title - The title of the page which appears in the browser window title. Aim for the title to be less than 70
    //         characters. The site name appears at the end for better SEO.
    ViewBag.Title = "Loading";
    // Description - Used by search engines. Aim for more than 160 characters.
    ViewBag.Description = "Your page is being loaded.";
}

<header class="mt-2">
    <h1>@ViewBag.Title</h1>
</header>
<div class="row">
    <article class="col-md-8">
        <p>@ViewBag.Description</p>
        <noscript>
            <div class="alert alert-warning" role="alert">
                <p>
                    Unfortunately, partial page loading is not available with JavaScript disabled. Please
                    <a class="alert-link" rel="external" href="https://enable-javascript.com/">enable JavaScript</a>
                    to speed up page loading.
                </p>
            </div>
        </noscript>
    </article>
</div>